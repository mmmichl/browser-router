{
  "name": "browser-router",
  "productName": "Browser Router",
  "version": "0.5.2",
  "description": "Opens a specific browser based on rules for Mac OS",
  "main": "src/index.js",
  "scripts": {
    "start": "ENV=DEV electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "lint": "eslint src",
    "prepublish": "yarn run lint",
    "publish": "electron-forge publish"
  },
  "keywords": [
    "Electron",
    "browser",
    "selection",
    "rules",
    "macos"
  ],
  "author": "mmmichl",
  "license": "GPL-3.0-only",
  "config": {
    "forge": {
      "make_targets": {
        "darwin": [
          "dmg"
        ]
      },
      "electronPackagerConfig": {
        "packageManager": "yarn",
        "icon": "icons/browser-router.icns",
        "ignore": [
          ".idea"
        ]
      },
      "github_repository": {
        "owner": "mmmichl",
        "name": "browser-router",
        "draft": false
      },
      "protocols": [
        {
          "name": "HTTP link",
          "schemes": [
            "http",
            "https"
          ]
        }
      ]
    }
  },
  "dependencies": {
    "electron-compile": "^6.4.3",
    "electron-log": "^2.2.17",
    "jsonpath": "^1.0.0",
    "xml2js": "^0.4.19"
  },
  "devDependencies": {
    "babel-plugin-transform-async-to-generator": "^6.24.1",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "electron-forge": "^5.2.2",
    "electron-prebuilt-compile": "3.0.0",
    "eslint": "^3",
    "eslint-config-airbnb": "^15",
    "eslint-plugin-import": "^2",
    "eslint-plugin-jsx-a11y": "^5",
    "eslint-plugin-react": "^7"
  }
}
